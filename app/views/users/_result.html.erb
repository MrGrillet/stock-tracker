<% if params[:action]=='search' %>
	<div class="results-block">
		<%= bootstrap_flash %>
	</div>
<% end %>

<% if @stock %>
	<div class="well results-block">
	    <strong>Symbol: </strong> <%= @stock.ticker %>
	    <strong>Name: </strong> <%= @stock.name %>
	    <strong>Price: </strong> <%= @stock.last_price %>
	    <% if current_user.can_add_stock?(@stock.ticker) %>
	   		<%= link_to "Add to stocks",  user_stocks_path(user: current_user, stock_ticker: @stock.ticker), class: 'btn btn-xs btn-success', method: :post %>  
	    <% else %>
	    	<span class="label label-default"> Stock cannot be added because you already 
	    	<% if !current_user.under_stocks_limit? %> 
	    	added more than 20 stocks.
	    	<% end %>
		    <% if current_user.stock_already_added?(@stock.ticker) %>
		    	this stock.
		    <% end %>
		    </span>
	     <% end %>
	</div>
<% end %>